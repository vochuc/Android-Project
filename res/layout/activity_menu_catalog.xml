<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_detail"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="70dp"
    android:paddingRight="70dp"
    
    tools:context="chuc.project.doanmonngonmoingay.MenuCatalogActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/title_home" />

    <Button
        android:id="@+id/btNgayThuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/menus"
        android:text="Thực đơn ngày thường"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btDacBiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menus"
        android:text="Thực đơn đặc biệt"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btChoBe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menus"
        android:text="Thực đơn cho bé"
        android:textColor="#FFFFFF" />
    
     <Button
        android:id="@+id/btFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menus"
        android:text="Món ăn yêu thích"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btGioiThieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menus"
        android:text="Giới thiệu"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btThoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menus"
        android:text="Thoát"
        android:textColor="#FFFFFF" />

</LinearLayout>
